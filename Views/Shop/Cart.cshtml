@model Users
@{
    ViewData["Title"] = "ViewCart";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<section class="py-5 bg-light">
    <div class="container">
        <div class="row px-4 px-lg-5 py-lg-4 align-items-center">
            <div class="col-lg-6">
                <h1 class="h2 text-uppercase mb-0">Cart</h1>
            </div>
            <div class="col-lg-6 text-lg-end">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb justify-content-lg-end mb-0 px-0 bg-light">
                        <li class="breadcrumb-item"><a class="text-dark" href="index.html">Home</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Cart</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</section>
<section class="py-5">
    <h2 class="h5 text-uppercase mb-4">Shopping cart</h2>
    <div class="row">
        <div class="col-lg-8 mb-4 mb-lg-0">
            <!-- CART TABLE-->
            <div class="table-responsive mb-4">
                <table class="table text-nowrap">
                    <thead class="bg-light">
                        <tr>
                            <th class="border-0 p-3" scope="col"> <strong class="text-sm text-uppercase">Product</strong></th>
                            <th class="border-0 p-3" scope="col"> <strong class="text-sm text-uppercase">Price</strong></th>
                            <th class="border-0 p-3" scope="col"> <strong class="text-sm text-uppercase">Quantity</strong></th>
                            <th class="border-0 p-3" scope="col"> <strong class="text-sm text-uppercase">Total</strong></th>
                            <th class="border-0 p-3" scope="col"> <strong class="text-sm text-uppercase"></strong></th>
                        </tr>
                    </thead>
                    <tbody class="border-0">

                        @foreach (var item in (IEnumerable<AddToCardItem>)ViewBag.cart)
                        {
                            <tr>
                                <th class="ps-0 py-3 border-light" scope="row">
                                    <div class="d-flex align-items-center">
                                        <a class="reset-anchor d-block animsition-link" href="detail.html"><img src="/Image/@item.Product.ProductImageName" alt="..." width="70" /></a>
                                        <div class="ms-3"><strong class="h6"><a class="reset-anchor animsition-link" href="detail.html">@item.Product.ProductID</a></strong></div>
                                    </div>
                                </th>
                                <td class="p-3 align-middle border-light">
                                    <p class="mb-0 small">LKR @item.Product.ProductPrice</p>
                                </td>
                                <td class="p-3 align-middle border-light">
                                    <p class="mb-0 small"> @item.Qty</p>
                                </td>
                                <td class="p-3 align-middle border-light">
                                    <p class="mb-0 small">@(item.Product.ProductPrice * item.Qty)</p>
                                </td>
                                <td class="p-3 align-middle border-light"><a class="reset-anchor" asp-controller="Shop" asp-action="Remove" asp-route-id="@item.Product.ProductID"><i class="fas fa-trash-alt small text-muted"></i></a></td>
                            </tr>

                        }



                    </tbody>
                </table>
            </div>
            <!-- CART NAV-->
            <div class="bg-light px-4 py-3">
                <div class="row align-items-center text-center">
                    <div class="col-md-6 mb-3 mb-md-0 text-md-start"><a class="btn btn-link p-0 text-dark btn-sm" asp-controller="Shop" asp-action="Index"><i class="fas fa-long-arrow-alt-left me-2"> </i>Continue shopping</a></div>

                </div>
            </div>
        </div>
        <!-- ORDER TOTAL-->
        <div class="col-lg-4">
            <div class="card border-0 rounded-0 p-lg-4 bg-light">
                <div class="card-body">
                    <h5 class="text-uppercase mb-4">Cart total</h5>
                    <ul class="list-unstyled mb-0">
                        <li class="d-flex align-items-center justify-content-between"><strong class="text-uppercase small font-weight-bold">Subtotal</strong><span class="text-muted small">LKR @ViewBag.total  </span></li>
                        <li class="border-bottom my-2"></li>
                        <li class="d-flex align-items-center justify-content-between mb-4"><strong class="text-uppercase small font-weight-bold">Total</strong><span>LKR @ViewBag.total</span></li>
                        <li>
                            <form method="post" asp-controller="Shop" asp-action="Checkout">
                                <div class="input-group mb-0">
                                    @using Microsoft.AspNetCore.Http
                                    @{

                                        var userId = Context.Session.GetString("userId");
                                        var userType = Context.Session.GetString("userType");

                                        <input type="text" asp-for="userEmail" name="userEmail" value="@userId" />
                                    }

                                    <input type="submit" class="btn btn-dark btn-sm w-100" value="Procceed to checkout" />

                                </div>
                            </form>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>