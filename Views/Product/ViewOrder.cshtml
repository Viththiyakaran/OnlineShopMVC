@model IEnumerable<BillDetail>;
@{
    ViewData["Title"] = "Product";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<!-- End of Topbar -->
<!-- Begin Page Content -->
<div class="container-fluid">

    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800"> New Orders</h1>
    </div>
    <!-- Content Row -->
    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">DataTables Example</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Detail ID</th>
                            <th>Product Name</th>
                            <th>Unit Price</th>
                            <th>Qty</th>
                            <th>Total Price</th>
                            

                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>Detail ID</th>
                            <th>Product Name</th>
                            <th>Unit Price</th>
                            <th>Qty</th>
                            <th>Total Price</th>

                        </tr>
                    </tfoot>
                    <tbody>

                        @foreach (var Obj in Model)
                        {
                            <tr>
                                <td>@Obj.billDetailId</td>
                                <td>@Obj.billProduct</td>
                                <td>@Obj.billPrice</td>
                                <td>@Obj.billQty</td>
                                <td>@(Obj.billQty * Obj.billPrice)</td>
                                
                            </tr>



                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>







</div>
<!-- /.container-fluid -->
