@model IEnumerable<Product>
@{
    ViewData["Title"] = "Product";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<!-- End of Topbar -->
<!-- Begin Page Content -->
<div class="container-fluid">

    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Stocks</h1>
        <a class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm" asp-controller="Product" asp-action="ReportStock">
            <i class="fa fa-plus-circle fa-sm text-white-50"></i> Stock Report
        </a>
    </div>
    <!-- Content Row -->
    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Stock List</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>P ID</th>
                            <th>Name</th>
                            <th>Description</th>
                            <th>Price</th>
                            <th>Current Stock</th>
                            <th>Update Stcok</th>
                            
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>P ID</th>
                            <th>Name</th>
                            <th>Description</th>
                            <th>Price</th>
                            <th>Current Stock</th>
                            <th>Update Stcok</th>
                        </tr>
                    </tfoot>
                    <tbody>

                        @foreach (var Obj in Model)
                        {
                            <tr>
                                <td>@Obj.ProductID</td>
                                <td>@Obj.ProductName</td>
                                <td>@Obj.ProductDescription</td>
                                <td>@Obj.ProductPrice</td>
                                <td>@Obj.ProductStock</td>
                                <td>

                                    <a class="btn btn-primary" asp-controller="Product" asp-action="StockEdit" asp-route-id="@Obj.ProductID"><i class="bi bi-pencil-square"></i>Update</a>

                                </td>
                            </tr>



                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>







</div>
<!-- /.container-fluid -->
