@model InvoiceView;

@{
    ViewData["Title"] = "Product";
    Layout = null;
}



<!-- Custom fonts for this template-->
<link href="~/Backend/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
<link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
      rel="stylesheet">

<!-- Custom styles for this page -->
<link href="~/Backend/vendor/datatables/dataTables.bootstrap4.min.css" rel="stylesheet">
<!-- Custom styles for this template-->
<link href="~/Backend/css/sb-admin-2.min.css" rel="stylesheet">
<!--Toastr-->
<link href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" rel="stylesheet">

<script>
    window.addEventListener("load", window.print());
</script>

<div class="card">
    <div class="card-body">
        <div class="container mb-5 mt-3">
            <div class="row d-flex align-items-baseline">
                <div class="col-xl-9">
                    @foreach (var billno in Model.billHeader)
                    {
                        <p style="color: #7e8d9f;font-size: 20px;"> Invoice >> <strong>ID: # @billno.billHeaderId </strong></p>
                    }

                </div>
                <div class="col-xl-3 float-end">
                </div>
                <hr>
            </div>

            <div class="container" id="toprint">
                <div class="col-md-12">
                    <div class="text-center">
                        @*<i class="fab fa-mdb fa-4x ms-0" style="color:#5d9fc5 ;"></i>*@
                        <p class="pt-0">P.M.ENTERPRISES</p>
                    </div>

                </div>


                <div class="row">
                    <div class="col-xl-8">
                        <ul class="list-unstyled">
                            @foreach (var cusDetail in Model.billHeader)
                            {
                                <li class="text-muted">To: <span style="color:#5d9fc5 ;"> @cusDetail.billFirstName  @cusDetail.billLastName</span></li>
                                <li class="text-muted">@cusDetail.billAddressLine1, @cusDetail.billAddressLine2</li>
                                <li class="text-muted">@cusDetail.billTown, @cusDetail.billProvince</li>
                                <li class="text-muted"><i class="fas fa-phone"></i> @cusDetail.billPhone</li>
                            }

                        </ul>
                    </div>
                    <div class="col-xl-4">
                        <p class="text-muted">Invoice</p>
                        <ul class="list-unstyled">
                            @foreach (var invoice in Model.billHeader)
                            {
                                <li class="text-muted">
                                    <i class="fas fa-circle" style="color:#84B0CA ;"></i> <span class="fw-bold">ID:</span># @invoice.billHeaderId
                                </li>
                                <li class="text-muted">
                                    <i class="fas fa-circle" style="color:#84B0CA ;"></i> <span class="fw-bold">Creation Date: </span>@invoice.billAddDateAndTime
                                </li>
                                <li class="text-muted">
                                    <i class="fas fa-circle" style="color:#84B0CA ;"></i> <span class="me-1 fw-bold">Payment:</span><span class="badge bg-warning text-black fw-bold">
                                        Cash on Delivery
                                    </span>
                                </li>
                            }

                        </ul>
                    </div>
                </div>

                <div class="row my-2 mx-1 justify-content-center">
                    <table class="table table-striped table-borderless">
                        <thead style="background-color:#84B0CA ;" class="text-white">
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Description</th>
                                <th scope="col">Qty</th>
                                <th scope="col">Unit Price</th>
                                <th scope="col">Amount</th>
                            </tr>
                        </thead>
                        <tbody>
                           
                            @foreach (var detail in Model.billDetail)
                            {
                                if (detail.billHeaderID % 2 == 0)
                                {
                                    <tr>
                                        <th scope="row">@detail.billDetailId</th>
                                        <td>@detail.billProduct</td>
                                        <td>@detail.billQty</td>
                                        <td>@detail.billPrice</td>
                                        <td>@(detail.billPrice* detail.billQty)</td>
                                    </tr>

                                    ViewBag.total = (detail.billPrice * detail.billQty);
                                }
                                else
                                {
                                    <tr>
                                        <th>@detail.billDetailId</th>
                                        <td>@detail.billProduct</td>
                                        <td>@detail.billQty</td>
                                        <td>@detail.billPrice</td>
                                        <td>@(detail.billPrice* detail.billQty)</td>
                                    </tr>

                                    ViewBag.total = (detail.billPrice * detail.billQty);
                                }


                            }


                        </tbody>

                    </table>
                </div>
                <div class="row">
                    <div class="col-xl-8">
                        

                    </div>
                    <div class="col-xl-3">
                        <ul class="list-unstyled">
                            <li class="text-muted ms-3"><span class="text-black me-4">SubTotal  :</span>LKR  @ViewBag.total</li>
                        </ul>
                        <p class="text-black float-start">
                            <span class="text-black me-3"> Total Amount  :</span><span style="font-size: 15px;">LKR  @ViewBag.total</span>
                        </p>
                    </div>
                </div>
                <hr>
                <div class="row">
                    <div class="col-xl-12 text-center">
                        <p>Thank you for your purchase</p>
                    </div>
                    
                </div>

            </div>
        </div>
    </div>
</div>
<!-- Bootstrap core JavaScript-->
<script src="~/Backend/vendor/jquery/jquery.min.js"></script>
<script src="~/Backend/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

<!-- Core plugin JavaScript-->
